{
    "name": "ビットコインサンバ！",
    "version": "1.0.0",
    "manifest_version": 2,
    "permissions": [
        "https://api.bitflyer.jp/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "description": "ビットコインで楽しくサンバ！",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}