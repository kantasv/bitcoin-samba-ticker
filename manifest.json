{
    "name": "ビットコインサンバ！",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://api.bitflyer.jp/*"
            ],
            "js": [
                "bitflyerSamba.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "description": "ビットコインで楽しくサンバ！",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}